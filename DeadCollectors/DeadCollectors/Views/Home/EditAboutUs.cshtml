@model DeadCollectors.ViewModels.AboutUsViewModel
@{
    ViewBag.Title = "EditAboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ValidationSummary("", new { @class = "text-danger" })
@using (Html.BeginForm("EditAboutUs", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.TextAreaFor(m => m.AboutUsHTML.AboutUsHTML, new { @class = "mytextarea" })
    <button class="btn btn-dark mt-3" style="font-size: 1.5rem; position: relative; left: 38%;">Save</button>
}


@section scripts {
    <script src='https://cloud.tinymce.com/5/tinymce.min.js?apiKey=f18d6uwnkr9y0q65wjir7f241qr039oohmk5i94j5vqns97g'></script>
    <script>
        tinymce.init({
            selector: '.mytextarea',
            height: 600
        });
    </script>
}
