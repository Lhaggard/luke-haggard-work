@model List<Model.Models.Vehicle>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <link href="css/bootstrap.css"
          rel="stylesheet">
    <link href="css/home.css" rel="stylesheet">
</head>
<div class="jumbotron">
    <h1>Big Huge Sale!!!</h1>
    <p class="lead"> </p>
</div>
<hr/>
<div class="row">
    <div class="col-md-4">
        <h2>Featured Vehicles</h2>


        @foreach (var vehicle in Model)
        {  
        <div class="vehicle col-md-4" id=@vehicle.InventoryNumber>
            Year: <p class="year">@vehicle.Year</p>
            Make: <p class="make">@vehicle.Make</p>
            Model:<p class="model">@vehicle.Model</p>
            Sale Price: <p class="salePrice">@vehicle.SalePrice</p>
            @Html.ActionLink("Details", "Details", "Home", new { id = vehicle.InventoryNumber }, new { @class = "btn btn-dark mt-2 mb-3" })
            <div>
                @if (vehicle.PicturePath != null && vehicle.PicturePath != "")
                {
                <img class="img-thumbnail" src="~/Images/@vehicle.PicturePath" />
                }
            </div>
        </div>
        }


    </div>
</div>